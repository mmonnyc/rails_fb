<%= simple_form_for(@post) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :context, input_html: { class: "textarea"}, wrapper: false, label: false,
    label_html: {class: "label"}, placeholder: "What do you want to post about today?...", autofocus: true %>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
</div>
<%= f.button :submit, "Submit", class: "button is-info" %>
<% end %>