<%= simple_form_for(Comment.new, url: post_comments_path(post)) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="comment-control">
    <%= f.input :content, input_html: { class: "textarea"}, wrapper: false, label: false,
    label_html: {class: "label"}, placeholder: "Your comment...", autofocus: true %>
    <%= f.hidden_field :post_id, value: post.id %>
  </div>
</div>
<%= f.button :submit, "Comment", class: "button is-info" %>
<% end %>